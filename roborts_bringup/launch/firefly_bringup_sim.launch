<launch>

  <master auto="start"/>
  <param name="/use_sim_time" value="true"/>
  <!--  <rosparam command="load" file="$(find roborts_base)/config/roborts_base_parameter.yaml"/>-->
  <arg name="map" value="icra2020"/>

  <group ns="/red2">
    <arg name="robot_name" default="red2"/>
    <param name="config_dir" type="string" value="$(arg robot_name)"/>

    <node name="map_server" pkg="map_server" type="map_server" args="$(find roborts_bringup)/maps/$(arg map).yaml"
          respawn="false">
    </node>

    <!-- Load parameters -->
    <rosparam command="load" file="$(find roborts_localization)/config/$(arg robot_name)/localization.yaml"/>
    <rosparam command="load" file="$(find roborts_localization)/amcl/config/amcl.yaml"/>

    <!-- Run the localization node -->
    <node pkg="roborts_localization" type="localization_node" name="localization_node" respawn="false"/>

    <!-- Run the global planner Node -->
    <node pkg="roborts_planning" type="global_planner_node" name="global_planner_node" respawn="false" output="screen"/>
    <node pkg="roborts_planning" type="global_planner_test" name="global_planner_test" respawn="false"/>

    <!-- Run the local planner node -->
    <node pkg="roborts_planning" type="local_planner_node" name="local_planner_node" respawn="false"/>
    <node pkg="roborts_planning" type="local_planner_test" name="local_planner_test" respawn="false"/>

    <!-- Run the velocity converter node -->
    <node pkg="roborts_planning" type="vel_converter" name="vel_converter_node" respawn="false">
      <remap from="local_planner_node/cmd_vel" to="/$(arg robot_name)/cmd_vel"/>
    </node>

    <!-- Run the rviz -->
    <node name="rviz_costmap" pkg="rviz" type="rviz" args="-d $(find roborts_bringup)/rviz/$(arg robot_name)/roborts.rviz">
      <remap from="/move_base_simple/goal" to="/$(arg robot_name)/move_base_simple/goal"/>
    </node>
  </group>

